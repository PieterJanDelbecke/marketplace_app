<%# this is the confirm order page, here you get to see the details of the item and the potential buyer %>

<h2>Confirm order</h2>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-6">
            <h1 class="display-4"><%= @current_item.name %></h1>
            <p class="lead"> <%= @current_item.description %></p>
            <hr class="my-4">
            <p class="lead">
                Item price: $<%= @current_item.price %><br>
            </p>

            <%# this button_to sends the params of the item to the bookings controller where it will create a new booking %>
            <%= button_to 'Confirm', bookings_path, method: :post, params: {confirmed_item: @current_item.id} , class:"btn btn-primary btn-lg" %>

        </div>
        <div class="col-md-6">
            <h1 class="display-4"><%= current_user.username %></h1>
                First name: <%= current_user.detail.first_name %><br>
                Last name: <%= current_user.detail.last_name %><br>
                Street number: <%= current_user.detail.street_number %><br>
                Street name: <%= current_user.detail.street_name %><br>
                Suburb: <%= current_user.detail.suburb %><br>
                Postcode: <%= current_user.detail.postcode %><br>
                State: <%= current_user.detail.state %><br>
                Phone number: <%= current_user.detail.phone_number %><br>
        </div>
    </div>
</div>

<%= link_to 'Back', :back, class:"btn btn-primary btn-lg" %>

