<%# form for a new listing, or editing an existing listing %>

<%= item.errors.full_messages.first if item.errors.any? %>
<%= form_with model: item do |form|%>
    <h6>Name bike:<h6>
    <%= form.text_field :name %>
    <p class="sub-text">(min 10 characters)<p>
    <h6>Description of your bike:<h6>
    <%= form.text_area :description, size: "50x7" %>
    <p class= "sub-text">(min 100 - max 400 characters)<p>
    <h6>Price:<h6>
    <%= form.number_field :price, min: 1 %>
    <br>
    <h6>Condition:<h6>
    <%= form.select :new, [["Second hand", 0],["New",1]] %>
    <br>
    <h6>Picture:<h6>
    <%= form.file_field :picture, accept:'image/png,image/jpg,image/jpeg' %>
    <br>
    <%= form.hidden_field :sold, value: 0 %>
    <br>
    <%= form.submit %>
<% end %>
<br><br><br>






