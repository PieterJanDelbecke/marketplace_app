<h1>Form</h1>

<%= form_with model: item do |form|%>
    <%= form.label :name %>
    <%= form.text_field :name %>
    <br><br>
    <%= form.label :description %>
    <%= form.text_area :description %>
    <br><br>
    <%= form.label :price %>
    <%= form.number_field :price%>
    <br><br>
    <% for option in news %>
        <div> 
            <%= form.radio_button :new, option %>
            <%= form.label "new#{option}".to_sym, option%>
        <div>
    <% end %>   
    <br><br>
    <%= form.label :picture %>
    <%= form.file_field :picture, accept:'image/png,image/jpg,image/jpeg' %>
    <br><br>
    <% session[:sold] = 1 %>
    <%if false %>
    <%= form.label :sold %>
    <%= form.number_field :sold%>
    <% end %>
    <br><br>
    <%= form.submit%>
<% end %>
<br><br>
<%= link_to 'Back', :back %>